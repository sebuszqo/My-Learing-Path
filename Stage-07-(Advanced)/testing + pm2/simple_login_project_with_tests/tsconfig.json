{
  "compilerOptions": {
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "module": "CommonJS",
    "target": "es6",
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es6",
      "dom.iterable"
    ],
    "allowSyntheticDefaultImports": true
  }
}
